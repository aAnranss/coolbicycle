<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="aboutViewModel"
            type="com.zy.setting.viewmodel.AboutViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--顶部导航-->
        <LinearLayout
            android:id="@+id/tab_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/ic_return"
                android:padding="2dp"
                binding:onClickCommand="@{aboutViewModel.returnBtnOnClickCommand}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="42dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="关于"
                android:textSize="20dp" />

        </LinearLayout>

        <!--logo与版本信息-->
        <LinearLayout
            android:id="@+id/version_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tab_bar"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- logo -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@mipmap/logo" />

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/app_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{aboutViewModel.versionInfo}" />

        </LinearLayout>

        <!--检查更新按钮-->
        <LinearLayout
            android:id="@+id/version_check"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_below="@id/version_info"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:layout_marginTop="30dp">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="检查更新"
                android:textSize="20dp"
                binding:onClickCommand="@{aboutViewModel.versionCheckBtnOnClickCommand}"/>

        </LinearLayout>

        <!--footer-->
        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/version_check"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系我"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Github"/>
        </LinearLayout>

    </RelativeLayout>
</layout>